generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id                     Int       @id @default(autoincrement())
    email                  String    @unique
    name                   String?
    awsId                  String    @unique
    customersupportMessage Message[] @relation("AdminMessages")
    messages               Message[] @relation("UserMessages")
}

model Message {
    id      Int     @id @default(autoincrement())
    title   String
    content String?
    user    User    @relation("UserMessages", fields: [userId], references: [awsId])
    userId  String
    admin   User    @relation("AdminMessages", fields: [adminId], references: [awsId])
    adminId String
}
